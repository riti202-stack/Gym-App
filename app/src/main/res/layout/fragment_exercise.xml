            <Button android:id="@+id/startBtn1" android:layout_width="0dp" android:layout_height="45dp"
                android:layout_weight="1" android:layout_marginStart="10dp" android:text="â–¶ï¸ Start"
                android:textSize="12sp" android:textStyle="bold" />
            <Button android:id="@+id/pauseBtn1" android:layout_width="0dp" android:layout_height="45dp"
                android:layout_weight="1" android:text="â¸ï¸ Pause" android:textSize="12sp" android:textStyle="bold" />
            <Button android:id="@+id/stopBtn1" android:layout_width="0dp" android:layout_height="45dp"
                android:layout_weight="1" android:text="â¹ï¸ Stop" android:textSize="12sp" android:textStyle="bold" />
            <Button android:id="@+id/addRepBtn1" android:layout_width="65dp" android:layout_height="45dp"
                android:text="+ Rep" android:textSize="12sp" android:textStyle="bold" android:backgroundTint="#27ae60"
