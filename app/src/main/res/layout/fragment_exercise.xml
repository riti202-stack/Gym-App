            <Button android:id="@+id/pauseBtn4" android:layout_width="0dp" android:layout_height="45dp"
                android:layout_weight="1" android:text="â¸ï¸ Pause" android:textSize="12sp" android:textStyle="bold" />
            <Button android:id="@+id/stopBtn4" android:layout_width="0dp" android:layout_height="45dp"
                android:layout_weight="1" android:text="â¹ï¸ Stop" android:textSize="12sp" android:textStyle="bold" />
            <Button android:id="@+id/addRepBtn4" android:layout_width="65dp" android:layout_height="45dp"
                android:text="+ Rep" android:textSize="12sp" android:textStyle="bold" android:backgroundTint="#27ae60"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- ðŸ”¥ EXERCISE 5: PLANK - âœ… fx:id="timer5", "reps5" -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_marginBottom="25dp" android:background="#e8f4f8"
            android:padding="15dp" android:elevation="4dp">
            <TextView android:layout_width="100dp" android:layout_height="wrap_content"
                android:text="ðŸ§˜ Plank" android:textStyle="bold" android:textSize="16sp" android:gravity="center_vertical" />
            <TextView android:id="@+id/timer5" android:layout_width="70dp" android:layout_height="45dp"
                android:text="00:00" android:textSize="18sp" android:textStyle="bold" android:background="@drawable/timer_bg"
                android:gravity="center" android:layout_marginStart="10dp" />
            <TextView android:id="@+id/reps5" android:layout_width="70dp" android:layout_height="45dp"
                android:text="0 reps" android:textSize="14sp" android:background="#d5f4e6" android:gravity="center"
