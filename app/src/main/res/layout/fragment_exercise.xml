            <Button android:id="@+id/startBtn5" android:layout_width="0dp" android:layout_height="45dp"
                android:layout_weight="1" android:layout_marginStart="10dp" android:text="â–¶ï¸ Start" android:textSize="12sp"
                android:textStyle="bold" />
            <Button android:id="@+id/pauseBtn5" android:layout_width="0dp" android:layout_height="45dp"
                android:layout_weight="1" android:text="â¸ï¸ Pause" android:textSize="12sp" android:textStyle="bold" />
            <Button android:id="@+id/stopBtn5" android:layout_width="0dp" android:layout_height="45dp"
                android:layout_weight="1" android:text="â¹ï¸ Stop" android:textSize="12sp" android:textStyle="bold" />
            <Button android:id="@+id/addRepBtn5" android:layout_width="65dp" android:layout_height="45dp"
                android:text="+ Rep" android:textSize="12sp" android:textStyle="bold" android:backgroundTint="#27ae60"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- ðŸ”¥ WEIGHT SECTION - âœ… fx:id="weightInput", "saveWeightBtn" -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginTop="20dp" android:layout_marginBottom="20dp"
            android:background="#e8f5e8" android:padding="20dp" android:elevation="6dp">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="âš–ï¸ Weight Tracking" android:textSize="20sp" android:textStyle="bold"
                android:layout_marginBottom="15dp" android:textColor="#27ae60" />
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Weight (kg):" android:textStyle="bold" android:textSize="16sp"
                    android:layout_gravity="center_vertical" />
                <EditText android:id="@+id/weightInput" android:layout_width="110dp" android:layout_height="50dp"
                    android:layout_marginStart="15dp" android:inputType="numberDecimal" android:hint="72.5"
                    android:background="@drawable/edittext_bg" android:gravity="center" />
                <Button android:id="@+id/saveWeightBtn" android:layout_width="wrap_content" android:layout_height="50dp"
                    android:layout_marginStart="15dp" android:text="ðŸ’¾ Save Weight" android:textStyle="bold"
                    android:textSize="14sp" android:backgroundTint="#27ae60" android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸ”¥ MEAL TRACKER - âœ… ALL fx:ids -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginBottom="20dp" android:background="#e8f5e8"
            android:padding="25dp" android:elevation="6dp">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="ðŸ³ Meal Calorie Tracker" android:textSize="22sp" android:textStyle="bold"
                android:textColor="#27ae60" android:layout_marginBottom="20dp" />

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_marginBottom="12dp">
                <TextView android:layout_width="85dp" android:layout_height="wrap_content"
                    android:text="ðŸ¥ž Breakfast:" android:textStyle="bold" android:textSize="16sp"
                    android:gravity="center_vertical" />
                <EditText android:id="@+id/breakfastCalories" android:layout_width="85dp" android:layout_height="50dp"
                    android:inputType="number" android:hint="500" android:background="@drawable/edittext_bg"
                    android:gravity="center" />
                <Button android:id="@+id/saveBreakfastBtn" android:layout_width="wrap_content" android:layout_height="50dp"
                    android:text="Save" android:backgroundTint="#f1c40f" android:textColor="@android:color/white"
                    android:textSize="14sp" android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_marginBottom="12dp">
                <TextView android:layout_width="85dp" android:layout_height="wrap_content"
                    android:text="ðŸ— Lunch:" android:textStyle="bold" android:textSize="16sp"
                    android:gravity="center_vertical" />
                <EditText android:id="@+id/lunchCalories" android:layout_width="85dp" android:layout_height="50dp"
                    android:inputType="number" android:hint="700" android:background="@drawable/edittext_bg"
                    android:gravity="center" />
                <Button android:id="@+id/saveLunchBtn" android:layout_width="wrap_content" android:layout_height="50dp"
                    android:text="Save" android:backgroundTint="#e67e22" android:textColor="@android:color/white"
                    android:textSize="14sp" android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_marginBottom="20dp">
                <TextView android:layout_width="85dp" android:layout_height="wrap_content"
                    android:text="ðŸ½ï¸ Dinner:" android:textStyle="bold" android:textSize="16sp"
                    android:gravity="center_vertical" />
                <EditText android:id="@+id/dinnerCalories" android:layout_width="85dp" android:layout_height="50dp"
                    android:inputType="number" android:hint="600" android:background="@drawable/edittext_bg"
                    android:gravity="center" />
                <Button android:id="@+id/saveDinnerBtn" android:layout_width="wrap_content" android:layout_height="50dp"
                    android:text="Save" android:backgroundTint="#8e44ad" android:textColor="@android:color/white"
                    android:textSize="14sp" android:textStyle="bold" />
            </LinearLayout>

            <TextView android:id="@+id/totalCalories" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:text="0 kcal" android:textSize="20sp" android:textStyle="bold" android:textColor="#27ae60"
                android:background="@drawable/total_bg" android:paddingLeft="24dp" android:paddingRight="24dp"
                android:paddingTop="16dp" android:paddingBottom="16dp" />
        </LinearLayout>

        <!-- ðŸ”¥ ATTENDANCE BUTTON - âœ… fx:id="attendanceBtn" -->
        <Button android:id="@+id/attendanceBtn" android:layout_width="match_parent" android:layout_height="55dp"
            android:layout_marginTop="15dp" android:layout_marginBottom="20dp" android:text="ðŸ“… Mark Attendance"
            android:textSize="18sp" android:textStyle="bold" android:backgroundTint="#3498db"
            android:textColor="@android:color/white" />

        <!-- ðŸ”¥ DIET CHART - âœ… fx:id="dietChart" -->
