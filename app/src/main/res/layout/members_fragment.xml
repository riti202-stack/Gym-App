<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f6f9"
    tools:context=".MembersFragment">

    <!-- TOP HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ‘¥ Members Management"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/totalMembersLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Members: 0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#3498db"
            android:background="#e8f4fd"
            android:padding="8dp"
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <!-- DIVIDER -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdfe6" />

    <!-- CENTER TABLE CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="30dp">

        <!-- TABLE CONTAINER (RecyclerView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/membersTable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:padding="8dp"
            android:clipToPadding="false"
            android:background="@drawable/table_bg" />

    </LinearLayout>

    <!-- BOTTOM BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdfe6"
            android:layout_marginEnd="15dp" />

        <Button
            android:id="@+id/refreshBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="ðŸ”„ Refresh"
            android:background="@drawable/refresh_button_bg"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="â† Back to Dashboard"
            android:background="#95a5a6"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
