<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GymApp"
        tools:targetApi="31">

        <!-- ✅ ONLY LoginActivity = LAUNCHER + exported=true -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ ALL OTHER Activities = exported=false -->
        <activity
            android:name=".PaymentsActivity"
            android:exported="false" />

        
        <activity
            android:name=".UserPanelActivity"
            android:exported="false" />
        <activity
            android:name=".ExerciseActivity"
            android:exported="false" />
        <activity
            android:name=".MembersActivity"
            android:exported="false" />  <!-- ✅ FIXED -->
        <activity
            android:name=".DashboardActivity"
            android:exported="false" />  <!-- ✅ ADD if missing -->

    </application>
</manifest>
